print("Welcome to a simple polynomial function limit calculator!")
print('Only polynomial functions of the following type are accepted as of now: ax(^n) +/- (bx) +/- (c)')
print("Therefore, please cooperate with the calculator's current limits and don't input any invalid values. :)")

limit_a=int(input("Please enter your limit a value. The a value is the value your x tends to."))
function_a=int(input("Please enter the first term of your function."))
operator=(input("Please input a valid mathematical operator in the following format: + or -! If it is a simple linear function, with just a single term, then insert 0."))
if operator not in ["+","-","0"]:
    print("Invalid mathematical operator.")
    exit()
function_b=int(input("Does your function have a b? If so, please enter it. If not, insert 0."))
secondx=int(input("Does your function have a second x? If yes, enter 1. If not, insert 0."))
if secondx not in [0,1]:
    exit()
secondoperator=input("Does your function have an operator after your second x? If yes, enter + or -. If not, enter 0.")
if secondoperator not in ["+","-","0"]:
    exit()
if secondoperator!="0":
    function_c=int(input("Enter your third term, the c of the function."))

if function_b==0 and type(function_a)==int and operator=="0":
    print("This limit results into: ",function_a*limit_a)

if function_b!=0 and operator=="+" and secondx==0:
    print(function_a*limit_a+function_b)

if function_b!=0 and operator=="-" and secondx==0:
    print(function_a*limit_a-function_b)

if function_b!=0 and operator=="+" and secondx==1:
    print(function_a*limit_a+function_b*limit_a)

if function_b!=0 and operator=="-" and secondx==1:
    print(function_a*limit_a-function_b*limit_a)

if function_b!=0 and operator=="+" and secondx==1 and secondoperator=="+":
    print(function_a*limit_a+function_b*limit_a+function_c)

if function_b!=0 and operator=="+" and secondx==1 and secondoperator=="-":
    print(function_a*limit_a+function_b*limit_a-function_c)

if function_b!=0 and operator=="-" and secondx==1 and secondoperator=="+":
    print(function_a*limit_a-function_b*limit_a+function_c)

if function_b!=0 and operator=="-" and secondx==1 and secondoperator=="-":
    print(function_a*limit_a-function_b*limit_a-function_c)
